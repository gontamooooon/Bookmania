<div class="container">
  <div class="row">
    <div class="col-md-10">
      <h3>プロフィール編集</h3>
      <%= form_with model: @user, url: user_path(current_user), method: :patch, local:true do |f| %>
      <%= render 'layouts/error', model: @user %>

        <div class="form-group">
          <%= f.label :プロフィール画像 %>
          <%= f.file_field :profile_image, class: "form-control-file user_image", accept: 'image/*' %>
        </div>
        <div class="form-group">
          <%= f.label:名前 %>
          <%= f.text_field :name, class:"form-control name" %>
        </div>
        <div class="form-group">
          <%= f.label :自己紹介 %>
          <%= f.text_area :introduction, class:"form-control introduction" %>
        </div>
        <div class="form-group">
          <%= f.submit "プロフィール更新", class:"btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>