<div class="container main-visual">
  <div class="row justify-content-center">
    <h3 class="p-5"><span class="header">プロフィール編集</span></h3>
  </div>

  <%= form_with model: @user, url: user_path(current_user), method: :patch, local:true do |f| %>
  <%= render 'layouts/error', model: @user %>
    <form>
      <div class="form-group row justify-content-center">
        <%= f.label :プロフィール画像, class:"col-2 col-form-label"  %>
        <div class="col-5">
          <%= f.file_field :profile_image, class: "form-control-file user_image", accept: 'image/*' %>
        </div>
      </div>
      <div class="form-group row justify-content-center">
        <%= f.label:名前, class:"col-2 col-form-label"  %>
        <div class="col-5">
          <%= f.text_field :name, class:"form-control name" %>
        </div>
      </div>
      <div class="form-group row justify-content-center">
        <%= f.label :自己紹介, class:"col-2 col-form-label"  %>
        <div class="col-5">
          <%= f.text_area :introduction, class:"form-control introduction" %>
        </div>
      </div>
      <div class="form-group row justify-content-center">
        <%= f.submit "プロフィール更新", class:"btn btn-success col-2" %>
      </div>
  <% end %>
</div>