<div class="container main-visual">
   <div class="row justify-content-center">
    <h3 class="p-3"><span class="header">レビュアー</span></h3>
   </div>
   <!--ソート機能-->
   <div class="sort-btn text-right">
     <span><%= link_to "昇順",users_path(sort: "new_arrival_order"), class: "btn btn-sm btn-link" %></span>
     <span>|</span>
     <span><%= link_to "降順",users_path(sort: "posting_order"), class: "btn btn-sm btn-link" %></span>
   </div>
   <% @users.each do |user| %>
      <div class="row justify-content-center">
        <div class="col-1 offset-1 user-img mr-5">
          <%= link_to user_path(user) , class:"shadow-lg" do %>
           <%= image_tag user.get_profile_image, size: "120x130" %>
          <% end %>
        </div>
        <div class="col-7">
          <div class="table">
            <div class="table-tr">
              <div class="table-td-index"><span class="heading">表示名</span></div>
              <div class="table-td"><%= user.name %></div>
            </div>
            <div class="table-tr">
              <div class="table-td-index"><span class="heading">自己紹介</span></div>
              <div class="table-td"><%= user.introduction %></div>
            </div>
            <div class="table-tr">
              <div class="table-td-index"><span class="heading">レビュー</span></div>
              <div class="table-td">
                <%= link_to user_path(user) do %>
                  公開<%= user.books.count %>件
                <% end %>
              </div>
            </div>
            <div class="table-tr">
              <div class="table-td-index"><span class="heading">フォロー数</span></div>
              <div class="table-td"><%= link_to user.followings.count, user_followings_path(user) %></div>
            </div>
            <div class="table-tr">
              <div class="table-td-index"><span class="heading">フォロワー数</span></div>
              <div class="table-td"><%= link_to user.followers.count, user_followers_path(user) %></div>
            </div>
            <!--<div class="table-tr">-->
            <!--  <div class="table-td-index"><span class="heading">コメント数</span></div>-->
            <!--  <div class="table-td"><%#= link_to user.receive_comment_count, user_path(user) %></div>-->
            <!--</div>-->
          </div>
        </div>
      </div>
  <% end %>
  <!--ページネーション-->
  <div class="d-flex justify-content-center"><%= paginate @users %></div>
</div>

