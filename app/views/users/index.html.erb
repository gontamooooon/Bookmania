<div class="container background-img">
   <div class="row justify-content-center">
    <h3 class="p-5"><span class="header">レビュアー</span></h3>
   </div>
   <% @users.each do |user| %>
       <div class="row justify-content-center">
        <div class="col-1 offset-1 user-img mr-5">
          <%= link_to user_path(user) do %>
           <%= image_tag user.get_profile_image, size: "120x130" %>
          <% end %>
        </div>
        <div class="col-7">
        <div class="table" style="background-color: white;width: 600px; height: 200px;padding: 20px;">
          <div class="d-flex table-tr" style="height: 20%;">
            <div class="table-td" style="height: 100%; width: 20%;"><span class="heading">表示名</span></div>
            <div class="table-td" style="height: 100%; width: 80%;"><%= user.name %></div>
          </div>
          <div class="d-flex table-tr" style="height: 20%;">
            <div class="table-td" style="height: 100%; width: 20%;"><span class="heading">自己紹介</span></div>
            <div class="table-td" style="height: 100%; width: 80%;"><%= user.introduction %></div>
          </div>
          <div class="d-flex table-tr" style="height: 20%;">
            <div class="table-td" style="height: 100%; width: 20%;"><span class="heading">レビュー</span></div>
            <div class="table-td" style="height: 100%; width: 80%;">
              <%= link_to user_path(user) do %>
                公開<%= user.books.count %>件
              <% end %>
            </div>
          </div>
          <div class="d-flex table-tr" style="height: 20%;">
            <div class="table-td" style="height: 100%; width: 20%;"><span class="heading">フォロー数</span></div>
            <div class="table-td" style="height: 100%; width: 25%;"><%= link_to user.followings.count, user_followings_path(user) %></div>
            <div class="table-td" style="height: 100%; width: 25%;"><span class="heading">フォロワー数</span></div>
            <div class="table-td" style="height: 100%; width: 25%;"><%= link_to user.followers.count, user_followers_path(user) %></div>
          </div>
          <div class="d-flex table-tr" style="height: 20%;">
            <div class="table-td" style="height: 100%; width: 20%;"><span class="heading">コメント数</span></div>
            <div class="table-td" style="height: 100%; width: 80%;"><%= link_to user.receive_comment_count, user_path(user) %></div>
          </div>
        </div>
        </div>
        </div>
  <% end %>
</div>
