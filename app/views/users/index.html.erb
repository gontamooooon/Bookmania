<div class="container">
  <div class="row">
   <h3>レビュアー</h3>


   <% @users.each do |user| %>
    <div class="col-5">
      <%= link_to user_path(user) do %>
       <%= image_tag user.get_profile_image, size: "50x50" %>
      <% end %>
    </div>

    <div class="col-7">
      <table class="table">
        <tr>
          <td>名前：</td>
          <td><%= user.name %></td>
        </tr>
        <tr>
          <td>自己紹介：</td>
          <td><%= user.introduction %></td>
        </tr>
        <tr>
          <td>好きな本のジャンル：</td>
          <td><%#= user.book.genre %></td>
        </tr>
        <tr>
          <td>レビュー：</td>
          <td><%= link_to "公開〇件", user_path(user) %></td>
        </tr>
        <tr>
          <td>フォロー数：</td>
          <td></td>
        </tr>
        <tr>
          <td>フォロワー数：</td>
          <td></td>
        </tr>
      </table>
    </div>
  <% end %>
 </div>
</div>