<div class="container main-visual">
  <div class="row justify-content-center">
      <h3 class="p-5"><span class="header">"<%= @word %>"の検索結果</span></h3>
  </div>
  <div class="row">
    <div class="table-responsive">
      <table class="table table-hover table-striped">
        <!--検索対象モデルがUserの時 -->
        <% if @range == "User" %>
            <thead>
              <tr>
                <th></th>
                <th><div class="text-center"><strong><i class="fas fa-user"></i></strong></div></th>
                <th><div class="text-center"><strong><i class="fas fa-comment"></i></strong>   レビュー</strong></div></th>
                <th><div class="text-center"><strong>フォロー</strong></div></th>
                <th><div class="text-center"><strong>フォロワー</strong></div></th>
              </tr>
            </thead>
            <tbody>
            <% @users.each do |user| %>
              <tr>
                <td>
                  <div class="text-center">
                    <%= link_to user_path(user) do %>
                      <%= image_tag user.get_profile_image, size:"50x50" %>
                    <% end %>
                    </div>
                </td>
                <td><div class="text-center"><%= user.name %></div></td>
                <td>
                  <div class="text-center">
                    <%= link_to user_path(user) do %>
                      公開<%= user.books.count %>件
                    <% end %>
                  </div>
                </td>
                <td><div class="text-center"><i class="fas fa-users"></i>   <%= link_to user.followings.count, user_followings_path(user) %></div></td>
                <td><div class="text-center"><i class="fas fa-users"></i>   <%= link_to user.followers.count, user_followers_path(user) %></div></td>
              </tr>
            <% end %>
            </tbody>
        <% else %>
        <!--検索対象モデルがUserではない時(= 検索対象モデルがBookの時) -->
            <thead>
              <tr>
                <th><div class="text-center"><i class="fas fa-camera"></i></div></th>
                <th><div class="text-center"><i class="fas fa-book"></i><strong>  タイトル</strong></div></th>
                <th><div class="text-center"><i class="fas fa-pen"></i></strong>  著者</strong></div></th>
                <th><div class="text-center"></strong>ジャンル</strong></div></th>
                <th></th>
                <th></th>
             </tr>
            </thead>
            <tbody>
            <% @books.each do |book| %>
              <tr>
                <td>
                  <div class="text-center">
                    <%= link_to book_path(book), class:"text-dark" do %>
                      <%= image_tag book.get_book_image, size:"50x50" %>
                    <% end %>
                  </div>
                </td>
                <td><div class="text-center"><%= book.title %></div></td>
                <td><div class="text-center"><%= book.author %></div></td>
                <td><div class="text-center"><%= book.genre %></div></td>
                <td><div class="text-center"><%= render "books/static_rate", book: book %></div></td>
                <td><div class="text-center"><i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>   <%= book.favorites.count %></div></td>
              </tr>
            <% end %>
            </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>



