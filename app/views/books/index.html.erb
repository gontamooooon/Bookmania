<div class="container">
<div class="row">
<table class='table table-hover table-inverse'>
  <!--ソート機能-->
  <span><%= link_to "新着順",books_path(sort: "new_arrival_order"), class: "btn btn-sm btn-link" %></span>
  <span>|</span>
  <span><%= link_to "投稿順",books_path(sort: "posting_order"), class: "btn btn-sm btn-link" %></span>
  <span>|</span>
  <span><%= link_to "高評価順",books_path(sort: "highly_rated"), class: "btn btn-sm btn-link" %></span>
  <span>|</span>
  <span><%= link_to "低評価順",books_path(sort: "low_rating"), class: "btn btn-sm btn-link"  %></span>
  <thead>
    <tr>
      <th></th>
      <th>タイトル</th>
      <th>著者</th>
      <th>ジャンル</th>
      <th>説明</th>
      <th>評価</th>
      <th>コメント件数</th>
      <th>いいね</th>
      <th>レビュアー</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td>
          <%= link_to book_path(book) do %>
            <%= image_tag book.get_book_image, size:'80x90' %><br>
          <% end %>
        </td>
        <td><%= link_to book.title, book_path(book) %></td>
        <td><%= book.author %></td>
        <td><%= book.genre %></td>
        <td><%= book.body %></td>

        <!--星形レビュー-->
        <td><%= render "static_rate", book: book %></td>
        <!--コメント数-->
        <td><%= render "book_comments/count", book: book %></td>
        <!--いいねボタン-->
        <td id="favorite_buttons_<%= book.id %>">
          <%= render "favorites/favorite-btn", book: book %>
        </td>
        <td>
          <%= link_to user_path(book.user) do %>
            <%= image_tag book.user.get_profile_image, size:'30x30' %><br>
            <%= book.user.name %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>