<div class="container main-visual">
  <div class="row justify-content-center">
    <h3 class="p-3"><span class="header">レビュー一覧</span></h3>
  </div>
  <!--ソート機能-->
  <div class="sort-index text-right">
    <span><%= link_to "新着順",books_path(sort: "new_arrival_order"), class: "btn btn-sm btn-link" %></span>
    <span>|</span>
    <span><%= link_to "投稿順",books_path(sort: "posting_order"), class: "btn btn-sm btn-link" %></span>
    <span>|</span>
    <span><%= link_to "高評価順",books_path(sort: "highly_rated"), class: "btn btn-sm btn-link" %></span>
    <span>|</span>
    <span><%= link_to "低評価順",books_path(sort: "low_rating"), class: "btn btn-sm btn-link"  %></span>
  </div>
  <table class='table table-hover'>
    <thead class="thead">
      <tr>
        <th></th>
        <th>タイトル</th>
        <th>著者</th>
        <th></th>
        <th></th>
        <th>レビュアー</th>
      </tr>
    </thead>
    <tbody class="tbody">
      <% @books.each do |book| %>
        <tr>
          <td>
            <%= link_to book_path(book) do %>
              <%= image_tag book.get_book_image, size:'80x80' %><br>
            <% end %>
          </td>
          <td><%= link_to book.title, book_path(book) ,class:"text-dark" %></td>
          <td><%= book.author %></td>
          <!--星形レビュー-->
          <td><%= render "static_rate", book: book %></td>
          <!--いいねボタン-->
          <td id="favorite_buttons_<%= book.id %>">
            <%= render "favorites/favorite-btn", book: book %>
          </td>
          <td>
            <%= link_to user_path(book.user), class:"text-dark" do %>
              <%= image_tag book.user.get_profile_image, size:'50x50' %><br>
              <i class="fa fa-user"></i><%= book.user.name %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="d-flex justify-content-center mb-3">
    <%= paginate @books %>
  </div>
</div>