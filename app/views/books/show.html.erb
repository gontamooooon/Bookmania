<div class="container main-visual">
  <div class="row justify-content-center">
    <h3 class="p-5"><span class="header">■■■   <%= @book.title %>   ■■■</span></h3>
  </div>
  <div class="row">
	 <div class="col-md-3 offset-1 mt-3">
	   <%= image_tag @book.get_book_image,size:"220x220", class:"shadow-lg" %>
	 </div>
	 <div class="col-md-8">
      	 <div class="col-md-12 mt-3">
      	   <strong>レビュー：</strong><%= @book.body %>
      	 </div>
      	 <div class="col-md-12 mt-3">
            <%= render "static_rate", book: @book %>
          </div>
      	 <div class="col-md-12 mt-3" id="favorite_buttons_<%=@book.id %>">
            <%= render "favorites/favorite-btn", book: @book %>
         </div>
         <div class="col-md-12 mt-3" id="comments_count">
           <%= render "book_comments/count", book: @book %>
         </div>
         <div class="col-md-12 mt-3">
            <% if @book.user_id == current_user.id %>
              <p>
                <%= link_to '編集', edit_book_path(@book), class: "btn btn-sm btn-outline-success edit_book_#{@book.id}" %>
                <%= link_to '削除', @book, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-outline-danger destroy_book_#{@book.id}"%>
              </p>
            <% end %>
         </div>

          <!--コメントフォームの部分テンプレート-->
         <div class="col-md-12 mt-3">
            <%= render "book_comments/form", book: @book, book_comment: @book_comment %>
         </div>

         <!--コメント一覧部分-->
         <div class="col-md-12 mt-3" id="comments_area">
            <%= render "book_comments/index", book: @book %>
         </div>
     </div>
  </div>
</div>