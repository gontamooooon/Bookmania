<div class="container main-visual">
  <div class="row justify-content-center">
    <h3 class="p-5"><span class="header">”<%= @user.name %>”さんとの <i class="fas fa-comments"></i> チャット</span></h3>
  </div>
  <div class="row">
    <div class="col-md-12"><%= current_user.name %></div>
    <div class="col-md-12"><%= @user.name %></div>
  </div>
            <table class="message table">
              <thead>
                <tr>
                  <th style="text-align: left; font-size: 20px;"></th>
                  <th style="text-align: right; font-size: 20px;"><%= @user.name %></th>
                </tr>
              </thead>
              <% @chats.each do |chat| %>
                <% if chat.user_id == current_user.id %>
                <tbody>
                  <tr>
                    <th>
                      <p style="text-align: left;"><%= chat.message %></p>
                    </th>
                    <th></th>
                  </tr>
                <% else %>
                  <tr>
                    <th></th>
                    <th>
                      <p style="text-align: right;"><%= chat.message %></p>
                    </th>
                  </tr>
                </tbody>
                <% end %>
              <% end %>
            </table>

            <%= form_with model: @chat, remote: true do |f| %>
              <%= f.text_field :message, class:"form-control" %>
              <%= f.hidden_field :room_id %>
              <%= f.submit "送信", class:"btn btn-sm btn-outline-success" %>
            <% end %>
        </div>
    </div>
</div>