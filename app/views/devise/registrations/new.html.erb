<div class="container">
  <div class="row">
    <h3 class="p-5 col-3 offset-2"><span class="index">新規会員登録</span></h3>
  </div>

  <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user' do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <form>
      <div class="form-group row">
        <%= f.label :名前, class:"offset-3 col-2 col-form-label" %>
          <div class="col-5">
            <%= f.text_field :name, autofocus: true, class:"form-control" %>
          </div>
      </div>


      <div class="form-group row">
        <%= f.label :メールアドレス, class:"offset-3 col-2 col-form-label" %><br />
          <div class="col-md-5">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control"%>
          </div>
      </div>

      <div class="form-group row">
        <div class=" offset-3 col-2">
         <%= f.label :パスワード %>
         <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
         <% end %>
        </div>
        <div class="col-md-5">
         <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :パスワード（確認用）, class:"col-2 offset-3 col-form-label" %>
        <div class="col-md-5">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
        </div>
      </div>

      <div class="form-group row col-2 offset-5 mt-4">
        <%= f.submit "新規会員登録", class: 'btn btn-success' %>
      </div>
    </form>
  <% end %>

  <div class="row mt-3">
    <div class="p-5 col-3 offset-2">
      <h6><span class="index">既に登録済みの方</span></h6>
    </div>
  </div>

  <div class="row">
    <div class="col-5 offset-3">
      <%= link_to "こちら", new_user_session_path %> からログインしてください。
    </div>
  </div>
</div>

