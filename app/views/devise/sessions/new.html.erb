<div class='container'>
  <div class='row'>
    <h3 class="p-5 col-3 offset-2"><span class="index">ログイン</span></h3>
  </div>

  <div class="row px-5 pb-3">
   <div class="col-3 offset-2">
    <h6><span class="index">会員の方はこちらからログイン</span></h6>
   </div>
  </div>

  <%= form_with model: @user, url: user_session_path do |f| %>
   <form>
    <div class="form-group row">
      <%= f.label :メールアドレス, class:"col-2 offset-3 col-form-label" %>
      <div class="col-md-5">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :パスワード, class:"col-2 offset-3 col-form-label" %>
      <div class="col-md-5">
        <%= f.password_field :password, autocomplete: "current-password", class:"form-control" %>
      </div>
    </div>

    <div class="form-group row col-2 offset-5 mt-4">
      <%= f.submit "ログイン" ,class: 'btn btn-primary' %>
    </div>
   </form>
  <% end %>

  <div class="row row px-5 py-3">
    <div class="col-3 offset-2">
      <h6><span class="index">会員登録がお済みでない方</span></h6>
    </div>
  </div>

  <div class="row mt-3">
   <div class="col-5 offset-3">
     <%= link_to "こちら", new_user_registration_path %> から新規登録を行ってください。
   </div>
  </div>
</div>
